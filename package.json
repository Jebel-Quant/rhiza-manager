{
  "name": "rhiza-manager",
  "displayName": "Rhiza-Manager",
  "description": "Manage Rhiza based repos",
  "version": "0.0.2",
  "publisher": "jebel-quant",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jebel-Quant/rhiza-manager.git"
  },
  "bugs": {
    "url": "https://github.com/Jebel-Quant/rhiza-manager/issues"
  },
  "homepage": "https://github.com/Jebel-Quant/rhiza-manager#readme",
  "keywords": [
    "git",
    "repository",
    "multi-repo",
    "workspace",
    "rhiza",
    "repository-manager",
    "git-tools"
  ],
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Rhiza Manager",
      "properties": {
        "rhizaManager.repositoryRoot": {
          "type": "string",
          "enum": [
            "workspace",
            "subfolders"
          ],
          "default": "subfolders",
          "description": "Where to look for repositories: 'workspace' treats workspace folders as repositories (for multi-root workspaces), 'subfolders' looks for repositories in subdirectories of workspace folders"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "repoManagerView",
          "name": "Rhiza Repositories"
        }
      ]
    },
    "commands": [
      {
        "command": "repoManager.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "repoManager.pullAll",
        "title": "Pull All Repositories",
        "icon": "$(cloud-download)"
      },
      {
        "command": "repoManager.fetchAll",
        "title": "Fetch All Repositories",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "repoManager.refresh",
          "when": "view == repoManagerView",
          "group": "navigation"
        },
        {
          "command": "repoManager.pullAll",
          "when": "view == repoManagerView"
        },
        {
          "command": "repoManager.fetchAll",
          "when": "view == repoManagerView"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "pretest": "tsc -p . && node esbuild.js",
    "test": "vscode-test",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
