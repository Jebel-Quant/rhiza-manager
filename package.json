{
  "name": "rhiza-manager",
  "displayName": "Rhiza-Manager",
  "description": "Manage Rhiza based repos",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "repoManagerView",
          "name": "Rhiza Repositories"
        }
      ]
    },
    "commands": [
      {
        "command": "repoManager.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "repoManager.pullAll",
        "title": "Pull All Repositories",
        "icon": "$(cloud-download)"
      },
      {
        "command": "repoManager.fetchAll",
        "title": "Fetch All Repositories",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "repoManager.refresh",
          "when": "view == repoManagerView",
          "group": "navigation"
        },
        {
          "command": "repoManager.pullAll",
          "when": "view == repoManagerView"
        },
        {
          "command": "repoManager.fetchAll",
          "when": "view == repoManagerView"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "pretest": "tsc -p . && node esbuild.js",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
